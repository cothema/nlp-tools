{
  "name": "cothema-nlp-tools",
  "version": "0.0.4",
  "description": "Simple NLP Typescript Tools",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "build:debug": "tsc --sourceMap -p ./tsconfig.build.json",
    "test": "jest --config=./jest.config.js",
    "test:cov": "jest --config=./jest.config.js --coverage",
    "test:watch": "jest --config=./jest.config.js --watch",
    "lint": "tslint -p . --fix",
    "generate:barrels": "barrelsby -c barrelsby.json",
    "prepublish": "npm run generate:barrels && npm run build"
  },
  "author": "Miloš Havlíček",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "xregexp": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/supertest": "^2.0.8",
    "barrelsby": "^2.2.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-etc": "^1.10.1",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint -p . --fix",
      "git add",
      "npm t"
    ]
  },
  "husky": {
    "hooks": {}
  }
}

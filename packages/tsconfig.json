  "compilerOptions": {
    "declaration": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "es2019",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "sourceMap": true,

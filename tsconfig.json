{
  "compilerOptions": {
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "ESnext",
      "DOM"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

{
  "compilerOptions": {
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "ESnext",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "~/*": ["packages/*"]
    },
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noEmit": false
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
